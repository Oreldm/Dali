<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp" >

        <LinearLayout
            android:id="@+id/tabs_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:layout_gravity="bottom">

            <RelativeLayout
                android:id="@+id/info_tab"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0">

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/brief_card"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/item_profile_picture"
                    android:src="@drawable/ic_bottom_bar_background"
                    android:scaleType="centerCrop"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/gray_button_color"/>

                <RelativeLayout
                    android:id="@+id/bottom_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/item_profile_picture">

                    <ImageView
                        android:id="@+id/bottom_bar_background"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:background="@drawable/ic_bottom_bar_background"
                        android:backgroundTint="@color/transparent_square" />

                    <TextView
                        android:id="@+id/artwork_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Round Flat"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        />

                    <ImageButton
                        android:id="@+id/like_button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignStart="@id/bottom_bar_background"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ic_like_icon"
                        android:tint="@color/gray_button_color"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:background="@null"
                        android:onClick="likeArtwork"/>

                    <ImageButton
                        android:id="@+id/info_button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignEnd="@id/bottom_bar_background"
                        android:layout_marginEnd="20dp"
                        android:layout_centerVertical="true"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_info_icon"
                        android:tint="@color/gray_button_color"
                        android:scaleType="centerInside"
                        android:background="@null" />
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>