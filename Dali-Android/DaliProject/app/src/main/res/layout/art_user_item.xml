<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/user_item_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_new_art_notification"
        android:layout_margin="12dp"
        android:adjustViewBounds="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/user_item_image"
        android:layout_centerVertical="true"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/item_main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_main_text"
            android:textSize="18sp"
            android:textColor="@color/almostBlack"
            android:fontFamily="@font/gilroy_extrabold"/>

        <TextView
            android:id="@+id/item_sub_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_sub_text"
            android:layout_below="@+id/item_main_text"
            android:textSize="16sp"
            android:fontFamily="@font/gilroy_light"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/item_corner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:text="@string/notification_time_placeholder"
        android:textSize="10sp"
        android:textColor="@color/list_subtext"/>

</RelativeLayout>