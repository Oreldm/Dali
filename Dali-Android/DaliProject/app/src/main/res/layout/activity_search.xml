<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SearchActivity">

    <RelativeLayout
        android:id="@+id/search_top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_top_navigation_bar"
            android:tint="@color/gray_button_color"
            android:scaleType="centerCrop"
            android:scaleY="1.5"/>

        <ImageButton
            android:id="@+id/profile_top_bar_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_back_arrow"
            android:tint="@color/colorDarkGray"
            android:background="@null"
            android:backgroundTint="@color/gray_button_color"/>

        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="@string/search_hint"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/profile_top_bar_back_button"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/search_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_top_bar">

    </ListView>

</RelativeLayout>